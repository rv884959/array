#include<stdio.h>
#define max_size 100
int main()
{
int arr[max_size];
int i,min,max,size;
printf("enter the size of array");
scanf("%d",&size);
printf("enter the elements of array");
for(i=0;i<size;i++)
{
    scanf("%d",&arr[i]);
}
max=arr[0];
min=arr[0];
for(i=1;i<size;i++)
{
if(arr[i]>max)
{
    max=arr[i];
}
if(arr[i]<min)
{
    min=arr[i];
}
}
printf("maximum element=%d",max);
printf("minimum element=%d",min);
return 0;
}
